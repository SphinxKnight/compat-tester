{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "eqeqeq":[
            "error"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "prefer-const":[
            "error"
        ],
        "no-var":[
            "error"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-trailing-spaces":[
            "error"
        ],
        "space-before-function-paren": [
            "error",
            "always"
        ],
        "space-infix-ops":[
            "error"
        ]
    }
}